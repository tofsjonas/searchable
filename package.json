{
  "name": "searchable",
  "private": false,
  "version": "0.0.1",
  "main": "./dist/searchable.iife.js",
  "module": "./dist/searchable.es.js",
  "unpkg": "./dist/searchable.min.js",
  "jsdelivr": "./dist/searchable.min.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/searchable.es.js",
      "require": "./dist/searchable.iife.js",
      "script": "./dist/searchable.min.js",
      "types": "./dist/index.d.ts"
    },
    "./dist/": {
      "import": "./dist/"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite --host",
    "es-to-iife": "tsx ./scripts/es-to-iife.ts",
    "file-sizes": "./scripts/file-sizes.sh",
    "prettier": "prettier --config .prettierrc.js --write ./dist/searchable.*.js --ignore-path /dev/null",
    "build": "tsc && vite build && npm run es-to-iife && npm run prettier && npm run compile",
    "test": "vitest",
    "compile": "google-closure-compiler --compilation_level ADVANCED_OPTIMIZATIONS --js=./dist/searchable.iife.js --js_output_file=./dist/searchable.min.js",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles",
    "prepare": "husky && echo 'npx lint-staged' > .husky/pre-commit && git add .husky/pre-commit",
    "uninstall-husky": "npm uninstall husky --no-save && git config --unset core.hooksPath && npx rimraf .husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.8.1",
    "@vitest/coverage-v8": "^3.2.4",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "google-closure-compiler": "^20251013.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.4",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sass-embedded": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-recommended": "^17.0.0",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
